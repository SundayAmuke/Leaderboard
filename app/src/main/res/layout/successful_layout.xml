<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12"
        android:background="@drawable/curved_corners_white_background"
        android:orientation="vertical"
        android:padding="@dimen/padding_24">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="281dp"
            android:layout_height="134dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_check_circle_24"
            android:contentDescription="@string/successfully_submitted_text" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/submission_successful_text"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_24" />
    </LinearLayout>
</layout>